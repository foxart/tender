<script type="text/javascript">
	$(document).on('change', '#file-upload-form #import_file_attachement', function () {
		$('#file-upload-form #import_file').val($(this).prop('files')[0].name);
	});
	$(document).on('click', '#file-upload-form #import_file_upload', function () {
		$('#file-upload-form #import_file_attachement').trigger('click');
	});
</script>
<div id="file-upload-form" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<form class="bs-modal form-horizontal" name="file-upload-form" method="post" action="#">
				<div class="modal-header">
					<button type="button" class="cancel close">
						<span>&times;</span>
					</button>
					<h3 class="modal-title">Upload csv file with new GeoInfo</h3>
				</div>
				<div class="modal-body">
					<div class="row">
						<div class="col-md-12">
							<div class="form-group form-group-sm has-feedback">
								<label class="col-md-3 control-label" for="import_file_attachement">file</label>
								<input id="import_file_attachement" class="hidden" name="import_file_attachement" type="file">
								<div class="col-md-9">
									<div class="input-group input-group-sm">
										<span class="input-group-btn">
        									<button id="import_file_upload" class="btn btn-default" type="button">Browse</button>
      									</span>
										<input id="import_file" name="import_file" class="form-control" type="text" disabled="disabled">

									</div>
									<span class="form-control-feedback"></span>
									<div class="help-block"></div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button class="submit btn btn-primary" type="submit">Submit</button>
					<a class="cancel btn btn-default pull-right" href="#">Close</a>
				</div>
			</form>
		</div>
	</div>
</div>
