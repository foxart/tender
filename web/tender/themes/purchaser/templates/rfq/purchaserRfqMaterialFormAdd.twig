<script type="text/javascript">
	$(document).ready(function () {
		$('#material_id').select2({
			minimumInputLength: 0,
			multiple: false,
			escapeMarkup: function (markup) {
				return markup;
			},
			ajax: {
				url: function () {
					return $.data(document.body, 'bs-modal').select;
				},
				dataType: 'json',
				context: this,
				data: function (params) {
					return {
						query_string: params.term
					};
				},
				processResults: function (data) {
					return {
						results: data.items
					};
				},
				cache: false
			}
		});
		$('#rfq-material-form-add').on('hide.bs.modal', function () {
			$("#material_id option").each(function () {
				$(this).remove();
			});
		})
	});
</script>

<div id="rfq-material-form-add" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<form class="bs-modal form-horizontal" name="rfq-material-form-add" method="post" action="#">
				<div class="modal-header">
					<button type="button" class="cancel close">
						<span>&times;</span>
					</button>
					<h3 class="modal-title"></h3>
				</div>
				<div class="modal-body">
					<div class="row">
						<div class="col-md-12">
							<div class="form-group form-group-sm">
								<label class="col-md-3 control-label" for="material_id">material</label>
								<div class="col-md-9 has-feedback">
									<select id="material_id" class="select2 form-control" name="material_id"></select>
									<div class="help-block"></div>
								</div>
							</div>
						</div>
						<div class="col-md-12">
							<div class="form-group form-group-sm">
								<label class="col-md-3 control-label" for="rfq_material_quantity">quantity</label>
								<div class="col-md-9 has-feedback">
									<input id="rfq_material_quantity" class="form-control" name="rfq_material_quantity"/>
									<span class="form-control-feedback"></span>
									<div class="help-block"></div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button class="submit btn btn-primary" type="submit">Submit</button>
					<a class="cancel btn btn-default pull-right" href="#">Close</a>
				</div>
			</form>
		</div>
	</div>
</div>
