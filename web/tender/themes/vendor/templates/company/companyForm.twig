<div id="company-form" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<form class="bs-modal form-horizontal" name="company-form" method="post" action="#">
				<div class="modal-header">
					<button type="button" class="cancel close">
						<span>&times;</span>
					</button>
					<h3 class="modal-title">Edit company</h3>
				</div>
				<div class="modal-body">
					<div class="row">
						<div class="col-md-12">
							<div class="form-group form-group-sm">
								<label class="col-md-3 control-label" for="company_name">Company name</label>
								<div class="col-md-9 has-feedback">
									<input id="company_name" class="form-control" name="company_name" type="text">
									<span class="form-control-feedback"></span>
									<div class="help-block"></div>
								</div>
							</div>
							<div class="form-group form-group-sm">
								<label class="col-md-3 control-label" for="company_title_id">Company title</label>
								<div class="col-md-9 has-feedback">
									<select id="company_title_id" class="form-control" name="company_title_id">
										<option selected="selected" value="0">[ select ]</option>
										{{ company_title_option }}
									</select>
									<div class="help-block"></div>
								</div>
							</div>
							<div class="form-group form-group-sm">
								<label class="col-md-3 control-label" for="company_type_id">Company type</label>
								<div class="col-md-9 has-feedback">
									<select id="company_type_id" class="form-control" name="company_type_id">
										<option selected="selected" value="0">[ select ]</option>
										{{ company_type_option }}
									</select>
									<div class="help-block"></div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button class="submit btn btn-primary" type="submit">Submit</button>
					<a class="cancel btn btn-default pull-right" href="#">Close</a>
				</div>
			</form>
		</div>
	</div>
</div>

